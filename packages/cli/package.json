{
  "name": "@kevin/cli",
  "bin": {
    "kevin": "./bin/kevin"
  },
  "version": "1.0.5",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "cli": "ts-node ./src/cli.ts",
    "speed": "ts-node ./src/speed.ts",
    "demo": "ts-node --transpile-only ./src/demo.ts",
    "kevin": "./bin/kevin",
    "prettier": "prettier './src/**/*.ts' --write",
    "lint:eslint": "eslint --cache --fix --ext .ts ./src",
    "lint:typescript": "tsc --noEmit",
    "lint": "yarn prettier; yarn lint:eslint; yarn lint:typescript",
    "test": "NODE_ENV=test jest --verbose --forceExit --detectOpenHandles --runInBand tests/filesystem.test.ts",
    "build": "esbuild ./src/cli.ts --bundle --external:terminal-kit --outdir=./dist --platform=node --target=node20 --sourcemap=inline"
  },
  "prettier": "@kevin/configuration/prettier.config.json",
  "eslintConfig": {
    "extends": [
      "../configuration/node/eslint.config.json"
    ]
  },
  "dependencies": {
    "@types/ora": "^3.2.0",
    "ansi-colors": "^4.1.3",
    "diff": "^5.1.0",
    "fast-fuzzy": "^1.12.0",
    "fs-extra": "^11.2.0",
    "ignore-walk": "^6.0.4",
    "import-meta-resolve": "^4.0.0",
    "openai": "^4.20.1",
    "ora": "^7.0.1",
    "terminal-kit": "^3.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "@kevin/configuration": "*",
    "@types/diff": "^5.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/ignore-walk": "^4.0.3",
    "@types/jest": "^29.1.1",
    "@types/terminal-kit": "^2.5.6",
    "@types/uuid": "^9.0.7",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.19.8",
    "esbuild-plugin-file-path-extensions": "^2.0.0",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3",
    "uuid": "^9.0.1"
  }
}
