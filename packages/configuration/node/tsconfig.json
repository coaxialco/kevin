{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "esnext",
      "module": "NodeNext",
      "allowJs": true,
      "skipLibCheck": false,
      "skipDefaultLibCheck": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "strict": true,
      "types": [
        "@types/jest", 
        "node"
      ],
      "typeRoots": [
        "./node_modules/@types", 
        "./src/types", 
        "../../node_modules/@types"
      ],
      "declaration": true,
      "declarationDir": "./types"
    },
    "exclude": [
      "**/dist/**/*",
      "**/types/**/*"
    ]
  }
  